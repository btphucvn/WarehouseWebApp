@model dynamic

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Suppliers" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>

            <span class="breadcrumb-item active">Danh sách nhà cung cấp</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-affix m-v-10">
                            <i class="prefix-icon anticon anticon-search opacity-04"></i>
                            <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Tìm kiếm nhà cung cấp">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-controller="Suppliers" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i>Thêm</a>
            </div>
        </div>
        <div class="table-responsive" id="records_table" name="records_table">
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {

            const queryString = window.location.search;
            const urlParams = new URLSearchParams(queryString);
            const page = urlParams.get('page')
            $.ajax({
                url: '/Suppliers/FindSuppliers',
                datatype: "json",
                type: "GET",
                data: { page: page },
                async: true,
                success: function (results) {
                    $("#records_table").html("");
                    $("#records_table").html(results);
                },
                error: function (xhr) {
                    alert('error');
                }
            });

            $('#keyword').keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: '/Suppliers/FindSuppliers',
                    datatype: "json",
                    type: "GET",
                    data: { search: strkeyword, page: 1 },
                    async: true,
                    success: function (results) {
                        $("#records_table").html("");
                        $("#records_table").html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });

        });

    </script>
}