@model WarehouseWebApp.Models.Groupgood

@{
    ViewData["Title"] = "Tạo mới nhóm hàng hóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2 class="header-title"></h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Groupgoods" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="Groupgoods" asp-action="Index">Danh sách nhóm hàng hóa</a>
            <span class="breadcrumb-item active">Tạo mới nhóm hàng hóa </span>
        </nav>
    </div>
</div>
<form asp-controller="Groupgoods" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>

    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="GroupName">Tên nhóm hàng hóa:</label>
                        <input type="text" class="form-control" asp-for="GroupName">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="anticon anticon-plus-circle"></i>
                        <span>Tạo</span>
                    </button>
                </div>
            </div>
        </div>

    </div>

</form>
