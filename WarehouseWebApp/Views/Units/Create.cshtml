@model WarehouseWebApp.Models.Unit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Units" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Units" asp-action="Index">Danh sách đơn vị</a>
            <span class="breadcrumb-item active">Tạo mới đơn vị</span>
        </nav>
    </div>
</div>
<form asp-controller="Units" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>


    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="CompanyId">Danh mục đơn vị</label>
                        <select class="custom-select" asp-for="CompanyId" asp-items="ViewBag.Companies">
                            <option value="" disabled selected>Chọn công ty</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="UnitCode">Mã đơn vị:</label>
                        <input type="text" class="form-control" asp-for="UnitCode">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="UnitName">Tên đơn vị:</label>
                        <input type="text" class="form-control" asp-for="UnitName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Phone">Số điện thoại:</label>
                        <input type="text" class="form-control" asp-for="Phone">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Email">Email:</label>
                        <input type="text" class="form-control" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Fax">Fax:</label>
                        <input type="text" class="form-control" asp-for="Fax">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Address">Địa chỉ:</label>
                        <input type="text" class="form-control" asp-for="Address">
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" name="Inventory" id="Inventory"
                                   @(Model!=null&&Model.Inventory==true?"value=true checked": "value=false")
                                   onclick="changeValueCheckBox()" />
                            <label for="Inventory"></label>
                        </div>
                        <label>Inventory</label>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" name="Disabled" id="Disabled"
                                   @(Model!=null&&Model.Disabled==true?"value=true checked": "value=false")
                                   onclick="changeValueCheckBox()" />
                            <label for="Disabled"></label>
                        </div>
                        <label>Disabled</label>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="anticon anticon-plus-circle"></i>
                        <span>Tạo</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{

    <script>
        function changeValueCheckBox() {

            var selected = [];
            $('input[type=checkbox]').each(function () {
                if ($(this).is(":checked")) {
                    var checkBox = document.getElementById($(this).attr('id'));
                    checkBox.value = "true";

                }
                else {
                    var checkBox = document.getElementById($(this).attr('id'));
                    checkBox.value = "false";
                }
            });
        }

    </script>
}