@model WarehouseWebApp.Models.Good

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Goods" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="Goods" asp-action="Index">Danh sách hàng hóa</a>
            <span class="breadcrumb-item active">Sửa hàng hóa</span>
        </nav>
    </div>
</div>
<div class="row m-b-30">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </div>

    <div class="col-lg-4 text-right">
        <form asp-action="Delete" asp-route-id="@Model.Barcode" method="post"
              onclick="return confirm('Are you sure you want to delete this?')">
            <button type="submit" class="btn btn-danger btn-tone m-r-5">Xóa</button>
        </form>
    </div>
</div>
<form asp-controller="Goods" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
    <input type="hidden" asp-for="Barcode" />


    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Barcode">Mã hàng hóa:</label>
                        <input type="text" class="form-control" asp-for="Barcode" disabled>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="CategoryName">Tên danh mục hàng hóa:</label>
                        <input type="text" class="form-control" asp-for="CategoryName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="CategoryShortName">Tên viết tắt danh mục hàng hóa:</label>
                        <input type="text" class="form-control" asp-for="CategoryShortName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="UnitId">Đơn vị:</label>
                        <select class="custom-select" asp-for="UnitId" asp-items="ViewBag.Units">
                            <option value="" disabled selected>Chọn đơn vị</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Price">Giá:</label>
                        <input type="number" class="form-control" asp-for="Price">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="SupplierId">Nhà cung cấp:</label>
                        <select class="custom-select" asp-for="SupplierId" asp-items="ViewBag.Suppliers">
                            <option value="" disabled selected>Chọn nhà cung cấp</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="OriginId">Nguồn gốc:</label>
                        <select class="custom-select" asp-for="OriginId" asp-items="ViewBag.Origins">
                            <option value="" disabled selected>Chọn nguồn gốc</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="GroupGoodId">Nhóm hàng hóa:</label>
                        <select class="custom-select" asp-for="GroupGoodId" asp-items="ViewBag.GroupGoods">
                            <option value="" disabled selected>Chọn nhóm hàng hóa</option>
                        </select>
                    </div>


                    <button type="submit" class="btn btn-primary">
                        <i class="anticon anticon-plus-circle"></i>
                        <span>Tạo</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>



